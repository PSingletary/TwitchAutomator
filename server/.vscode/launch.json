    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch TS",
            "request": "launch",
            "runtimeArgs": ["run", "start:dev"],
            "runtimeExecutable": "yarn",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\src\\index.ts",
            "args": ["--port", "8081"],
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
